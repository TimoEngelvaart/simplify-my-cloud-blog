---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import { homePageContent, Logo } from "../config";
import SocialLink from "../components/SocialLink.astro";
import Link from "../components/Link.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("posts");
posts.sort((a, b) => {
  const dateA = new Date(a.data.pubDate).getTime();
  const dateB = new Date(b.data.pubDate).getTime();
  return dateB - dateA;
});
posts.splice(2)
---

<Layout seo={homePageContent.seo}>
  <!-- Hero Section -->
  <section class="max-w-4xl mx-auto px-6 pt-24 pb-20">
    <div class="flex flex-col lg:flex-row items-center gap-16">
      <!-- Profile Image -->
      <div class="flex-shrink-0">
        <Image
          src={Logo.logo}
          alt={Logo.name}
          width={180}
          height={180}
          class="rounded-full w-[180px] h-[180px] object-cover ring-1 ring-gray-200 dark:ring-gray-800"
        />
      </div>

      <!-- Hero Content -->
      <div class="flex-1 text-center lg:text-left max-w-2xl">
        <div class="inline-block mb-3">
          <span class="text-sm font-medium opacity-60">
            {homePageContent.role}
          </span>
        </div>
        <h1 class="font-bold text-5xl md:text-6xl mb-5 leading-tight">
          {Logo.name}
        </h1>
        <p class="text-lg opacity-70 mb-8 leading-relaxed">
          {homePageContent.description}
        </p>

        <!-- CTA Buttons -->
        <div class="flex flex-wrap items-center justify-center lg:justify-start gap-3 mb-8">
          {
            homePageContent.links.map((link) => (
              <a
                href={link.url}
                class="px-5 py-2.5 rounded-lg bg-black dark:bg-white text-white dark:text-black font-medium text-sm hover:opacity-90 transition-opacity"
              >
                {link.title}
              </a>
            ))
          }
          <a
            href="/blog"
            class="px-5 py-2.5 rounded-lg border border-gray-300 dark:border-gray-700 font-medium text-sm hover:bg-secondary transition-colors"
          >
            Read Blog
          </a>
        </div>

        <!-- Social Links -->
        <div class="flex items-center justify-center lg:justify-start gap-4">
          {
            homePageContent.socialLinks.map((link) => (
              <SocialLink
                title={link.title}
                url={link.url}
                icon={link.icon}
                external={link.external}
              />
            ))
          }
        </div>
      </div>
    </div>
  </section>

  <!-- Latest Posts Section -->
  <section class="max-w-4xl mx-auto px-6 py-20 border-t border-gray-200 dark:border-gray-800">
    <div class="flex items-center justify-between mb-10">
      <div>
        <h2 class="font-bold text-2xl mb-1">Latest Posts</h2>
        <p class="text-sm opacity-60">Recent insights and guides</p>
      </div>
      <a
        href="/blog"
        class="hidden sm:inline-flex items-center gap-1 text-sm font-medium opacity-60 hover:opacity-100 transition-opacity"
      >
        View all →
      </a>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {
        posts.map((post) => (
          <a
            href={`/blog/${post.id}`}
            class="group block border border-gray-200 dark:border-gray-800 rounded-lg overflow-hidden hover:border-gray-300 dark:hover:border-gray-700 transition-colors"
          >
            <div class="relative overflow-hidden aspect-video bg-secondary">
              <Image
                src={post.data.image.url}
                alt={post.data.image.alt}
                width={600}
                height={400}
                class="w-full h-full object-cover"
              />
            </div>
            <div class="p-5">
              <p class="text-xs opacity-50 mb-2">
                {post.data.pubDate.toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
              </p>
              <h3 class="font-semibold text-lg mb-2 group-hover:opacity-70 transition-opacity">{post.data.title}</h3>
              <p class="text-sm opacity-60 leading-relaxed line-clamp-2">{post.data.description}</p>
            </div>
          </a>
        ))
      }
    </div>

    <div class="text-center sm:hidden mt-8">
      <a
        href="/blog"
        class="inline-flex items-center gap-1 text-sm font-medium opacity-60 hover:opacity-100 transition-opacity"
      >
        View all →
      </a>
    </div>
  </section>
</Layout>
