---
import { Image } from "astro:assets";
import Layout from "../layouts/Layout.astro";
import { aboutPageContent } from "../config";
import SocialLinkBox from "../components/SocialLinkBox.astro";
import {marked} from "marked"

const pageDescription = marked.parse(aboutPageContent.about.description)
const connectDescription = marked.parse(aboutPageContent.connect.description)
---

<Layout seo={aboutPageContent.seo}>
  <section class="max-w-4xl mx-auto px-6 pt-20 pb-24">
    <div class="mb-12">
      <h1 class="font-bold text-4xl mb-2 text-gray-900 dark:text-gray-100">About</h1>
      <p class="text-lg text-gray-600 dark:text-gray-400">{aboutPageContent.subtitle}</p>
    </div>

    <div class="prose prose-lg dark:prose-invert max-w-none mb-16
      prose-p:leading-relaxed prose-p:mb-5
      prose-strong:font-semibold prose-strong:text-current
      prose-a:font-medium prose-a:no-underline hover:prose-a:underline
      prose-ul:my-4 prose-li:my-1">
      <Fragment set:html={pageDescription} />
    </div>

    <div class="flex gap-4 mb-24">
      <div class="flex-1">
        <Image
          src={aboutPageContent.about.image_l.url}
          alt={aboutPageContent.about.image_l.alt}
          width={500}
          height={350}
          class="w-full h-auto object-cover rounded-lg border border-gray-200 dark:border-gray-800"
        />
      </div>
      <div class="w-1/3">
        <Image
          src={aboutPageContent.about.image_r.url}
          alt={aboutPageContent.about.image_r.alt}
          width={200}
          height={350}
          class="w-full h-auto object-cover rounded-lg border border-gray-200 dark:border-gray-800"
        />
      </div>
    </div>

    <div class="border-t border-gray-200 dark:border-gray-800 pt-12">
      <h2 class="font-bold text-2xl mb-4 text-gray-900 dark:text-gray-100">Connect</h2>
      <div class="prose prose-lg dark:prose-invert max-w-none mb-8
        prose-p:leading-relaxed prose-p:text-gray-700 dark:prose-p:text-gray-300">
        <Fragment set:html={connectDescription} />
      </div>
      <div class="grid grid-cols-2 gap-3">
        {
          aboutPageContent.connect.links.map((item) => (
            <SocialLinkBox {...item} />
          ))
        }
      </div>
    </div>
  </section>
</Layout>
