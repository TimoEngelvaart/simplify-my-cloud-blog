---
import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";
import { navBarLinks, identity, socialLinks } from "../config";
import type { SEOInfo } from "../types/config";

interface Props {
  seo: SEOInfo;
}

const { seo } = Astro.props;
---

<script>
  // Theme toggle functionality
  const themeToggle = document.getElementById("theme-toggle") as HTMLButtonElement;
  const html = document.documentElement;

  // Check for saved theme preference or default to dark
  const currentTheme = localStorage.getItem("theme") || "dark";
  html.setAttribute("data-theme", currentTheme);

  themeToggle?.addEventListener("click", () => {
    const theme = html.getAttribute("data-theme");
    const newTheme = theme === "dark" ? "light" : "dark";
    html.setAttribute("data-theme", newTheme);
    localStorage.setItem("theme", newTheme);
  });

  // Menu functionality
  const linkMenuButton = document.getElementById("link-menu-button") as HTMLButtonElement;
  const linkMenu = document.getElementById("link-menu") as HTMLDivElement;
  const openIndicator = document.getElementById("open-indicator") as HTMLSpanElement;

  const toggleMenu = (show: boolean) => {
    linkMenu.classList.toggle("pointer-events-none", !show);
    linkMenu.classList.toggle("opacity-0", !show);
    openIndicator.innerText = show ? "-" : "+";
  };

  linkMenuButton.addEventListener("click", () => {
    toggleMenu(linkMenu.classList.contains("opacity-0"));
  });

  document.addEventListener("click", (event) => {
    const target = event.target as Node;
    if (!linkMenuButton.contains(target) && !linkMenu.contains(target)) {
      toggleMenu(false);
    }
  });
</script>

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <meta name="generator" content={Astro.generator} />
    <title>{seo.title}</title>
    <meta name="description" content={seo.description} />
    <meta property="og:title" content={seo.title} />
    <meta property="og:description" content={seo.description} />
    <meta property="og:image" content={seo.image} />
    <script is:inline>
      // Prevent flash of unstyled content
      const theme = localStorage.getItem("theme") || "dark";
      document.documentElement.setAttribute("data-theme", theme);
    </script>
    <!-- Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-0KL7Y7MZKN"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());
      gtag('config', 'G-0KL7Y7MZKN');
    </script>
  </head>
  <body class="relative">
    <!-- Subtle Professional Background -->
    <div class="fixed inset-0 -z-10 overflow-hidden bg-white dark:bg-gray-950">
      <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-primary-100 dark:bg-gray-800/30 rounded-full mix-blend-multiply dark:mix-blend-soft-light filter blur-3xl opacity-30"></div>
      <div class="absolute bottom-0 left-0 w-[500px] h-[500px] bg-primary-50 dark:bg-gray-800/20 rounded-full mix-blend-multiply dark:mix-blend-soft-light filter blur-3xl opacity-20"></div>
    </div>

    <header class="sticky top-0 z-50 backdrop-blur-md border-b border-gray-200 dark:border-gray-800" style="background-color: rgba(13, 20, 66, 0.9);">
      <div class="px-6 py-4 max-w-4xl mx-auto flex items-center justify-between">
        <a href="/" class="flex items-center gap-3 group">
          <div class="relative w-[36px] h-[36px]">
            <Image
              src="/logo-light.svg"
              alt={"Logo"}
              width={36}
              height={36}
              class="logo-light absolute inset-0 w-[36px] h-[36px] object-cover rounded-full ring-1 ring-gray-200 group-hover:ring-primary-500 transition-all shadow-sm bg-white"
            />
            <Image
              src="/logo-dark.svg"
              alt={"Logo"}
              width={36}
              height={36}
              class="logo-dark absolute inset-0 w-[36px] h-[36px] object-cover rounded-full ring-1 ring-gray-700 group-hover:ring-primary-500 transition-all shadow-sm"
            />
          </div>
          <span class="hidden sm:block font-semibold text-gray-100 group-hover:text-primary-400 transition-colors">{identity.name}</span>
        </a>

        <nav class="ml-auto mr-4 sm:mr-6">
          <ul class="hidden sm:flex sm:items-center sm:gap-1">
            {
              navBarLinks.map((link) => (
                <li>
                  <a
                    class="px-4 py-2 rounded-lg text-gray-300 hover:text-gray-100 hover:bg-gray-800/50 transition-all font-medium text-sm"
                    href={link.url}
                    target={link.external ? "_blank" : "_self"}
                  >
                    {link.title}
                  </a>
                </li>
              ))
            }
          </ul>
          <div class="relative sm:hidden">
            <button
              id="link-menu-button"
              class="px-3 py-2 rounded-lg text-gray-300 hover:text-gray-100 hover:bg-gray-800/50 transition-all font-medium text-sm"
              >Menu <span id="open-indicator">+</span></button
            >
            <div
              id="link-menu"
              class="absolute p-2 right-0 mt-2 rounded-lg w-48 shadow-professional border border-gray-700 transition-all ease-in-out duration-300 opacity-0 pointer-events-none z-40"
              style="background-color: #0d1442;"
            >
              <ul>
                {
                  navBarLinks.map((link) => (
                    <li>
                      <a
                        class="block px-4 py-3 rounded-lg text-gray-300 hover:text-gray-100 hover:bg-gray-800/50 transition-all font-medium"
                        href={link.url}
                        target={link.external ? "_blank" : "_self"}
                      >
                        {link.title}
                      </a>
                    </li>
                  ))
                }
              </ul>
            </div>
          </div>
        </nav>

        <div class="flex items-center gap-1">
          <button
            id="theme-toggle"
            class="p-2 rounded-lg text-gray-300 hover:text-gray-100 hover:bg-gray-800/50 transition-all"
            aria-label="Toggle theme"
          >
            <Icon name="mdi:theme-light-dark" width={18} height={18} />
          </button>
          <a
            href=`mailto:${identity.email}`
            class="p-2 rounded-lg text-gray-300 hover:text-gray-100 hover:bg-gray-800/50 transition-all"
            aria-label="Email"
          >
            <Icon name="mdi:email" width={18} height={18} />
          </a>
        </div>
      </div>
    </header>
    <main class="mb-32">
      <slot />
    </main>
    <footer class="relative mt-20 border-t border-gray-200 dark:border-gray-800" style="background-color: #0d1442;">
      <div class="max-w-4xl mx-auto px-6 py-16">
        <div class="grid grid-cols-1 sm:grid-cols-3 gap-12 mb-12">
          <!-- Brand Section -->
          <div>
            <a href="/" class="inline-flex items-center gap-3 group mb-4">
              <div class="relative w-[40px] h-[40px]">
                <Image
                  src="/logo-light.svg"
                  alt={identity.name}
                  width={40}
                  height={40}
                  class="logo-light absolute inset-0 w-[40px] h-[40px] object-cover rounded-full ring-1 ring-gray-200 group-hover:ring-primary-500 transition-all shadow-sm bg-white"
                />
                <Image
                  src="/logo-dark.svg"
                  alt={identity.name}
                  width={40}
                  height={40}
                  class="logo-dark absolute inset-0 w-[40px] h-[40px] object-cover rounded-full ring-1 ring-gray-700 group-hover:ring-primary-500 transition-all shadow-sm"
                />
              </div>
              <span class="font-semibold text-gray-100 group-hover:text-primary-400 transition-colors">{identity.name}</span>
            </a>
            <p class="text-sm text-gray-400 leading-relaxed">
              Turning complex cloud challenges into simple, shippable solutions.
            </p>
          </div>

          <!-- Navigation -->
          <div>
            <h3 class="font-semibold text-sm mb-4 text-gray-100">Navigation</h3>
            <nav class="flex flex-col gap-2">
              {navBarLinks.map((link) => (
                <a
                  href={link.url}
                  target={link.external ? "_blank" : "_self"}
                  class="text-sm text-gray-400 hover:text-primary-400 transition-colors w-fit"
                >
                  {link.title}
                </a>
              ))}
            </nav>
          </div>

          <!-- Connect -->
          <div>
            <h3 class="font-semibold text-sm mb-4 text-gray-100">Connect</h3>
            <div class="flex items-center gap-2 mb-4">
              {socialLinks.map((link) => (
                <a
                  href={link.url}
                  target={link.external ? "_blank" : "_self"}
                  class="p-2 rounded-lg bg-gray-800 text-gray-400 hover:text-primary-400 hover:bg-gray-700 transition-all"
                  aria-label={link.title}
                >
                  <Icon name={link.icon} width={18} height={18} />
                </a>
              ))}
            </div>
            <a
              href=`mailto:${identity.email}`
              class="text-sm text-gray-400 hover:text-primary-400 transition-colors inline-block"
            >
              {identity.email}
            </a>
          </div>
        </div>

        <!-- Bottom -->
        <div class="pt-8 border-t border-gray-700 text-center sm:text-left">
          <p class="text-xs text-gray-500">
            © {new Date().getFullYear()} {identity.name}. Built with Astro.
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap");

  :root {
    --bg-primary: #ffffff;
    --bg-secondary: #f5f5f5;
    --text-primary: #000000;
    --text-secondary: #666666;
  }

  [data-theme="dark"] {
    --bg-primary: #000000;
    --bg-secondary: #1a1a1a;
    --text-primary: #ffffff;
    --text-secondary: #999999;
  }

  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    -webkit-font-smoothing: antialiased;
  }

  html {
    font-family: "Inter", sans-serif;
    background: var(--bg-primary);
  }

  body,
