---
import { Icon } from "astro-icon/components";
import type { SocialLink } from "../types/config";

type Props = SocialLink;

const { title, url, icon, external } = Astro.props;
---

<a
  href={url}
  class="p-4 rounded-lg border border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-gray-900 flex items-center gap-3 hover:border-primary-500 dark:hover:border-primary-500 transition-all text-gray-900 dark:text-gray-100"
  target={external ? "_blank" : "_self"}
>
  <Icon name={icon} width={25} height={25} class="text-gray-600 dark:text-gray-400" />
  <div class="flex items-center justify-between w-full">
    <p class="font-medium">{title}</p>
    <div class="rotate-45 text-gray-400 dark:text-gray-600">
      <Icon name="mdi:arrow-up" width={18} height={18} />
    </div>
  </div>
</a>
