---
import { Icon } from "astro-icon/components";
import type { SocialLink } from "../types/config";

type Props = SocialLink;

const { title, url, icon, external } = Astro.props;
---

<a
  href={url}
  class="flex items-center gap-3 p-2 rounded-lg bg-gradient-to-r from-primary-500/5 to-accent-500/5 hover:from-primary-500/10 hover:to-accent-500/10 opacity-80 hover:opacity-100 transition-all hover:scale-105 group border border-transparent hover:border-primary-500/20"
  target={external ? "_blank" : "_self"}
>
  <Icon name={icon} width={22} height={22} class="text-primary-600 dark:text-primary-400" />
  <div>
    <p class="text-sm font-medium">{title}</p>
  </div>
</a>
